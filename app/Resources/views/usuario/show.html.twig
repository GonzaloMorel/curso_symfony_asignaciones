{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Rut</th>
                <td>{{ usuario.rut }}</td>
            </tr>
            <tr>
                <th>Dv</th>
                <td>{{ usuario.dv }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ usuario.nombres }}</td>
            </tr>
            <tr>
                <th>Appat</th>
                <td>{{ usuario.apPat }}</td>
            </tr>
            <tr>
                <th>Apmat</th>
                <td>{{ usuario.apMat }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuario.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ usuario.imagen }}</td>
            </tr>
            <tr>
                <th>Imagentipo</th>
                <td>{{ usuario.imagenTipo }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ usuario.path }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if usuario.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if usuario.createdAt %}{{ usuario.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if usuario.updatedAt %}{{ usuario.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
